{
  "manifest_version": 2,

  "name": "codesy.io",
  "description": "codesy is a pay-what-you-want market for the open source community to encourage coders to fix important bugs.",
  "version": "1.0",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
   "128": "img/icon128.png"
  },

  "options_page": "options.html",

  "permissions": [
    "storage",
    "https://codesy-dev.herokuapp.com/",
    "https://codesy-stage.herokuapp.com/",
    "https://codesy-groovecoder.herokuapp.com/",
    "https://api.codesy.io/"
  ],

  "web_accessible_resources": [
      "js/jquery-2.0.3.min.js",
      "js/jquery-2.0.3.min.map"
  ],
  "content_scripts" : [
    {
      "matches" : ["<all_urls>"],
      "css" : [
        "css/codesy.css"
      ],
      "js" : [
        "js/jquery-2.0.3.min.js",
        "js/codesy.js"
      ],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ]

}

